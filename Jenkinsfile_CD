pipeline {
    agent {
        docker {
            image 'alpine/git'  // You can also use 'node:18' if you need Node tools
        }
    }


    stages {
        stage('Checkout Repo') {
            steps {
                checkout scm
            }
        }

        stage('Update Kubernetes Manifest') {
            steps {
                script {

                    sh "hello world"
                }
            }
        }

        stage('Commit and Push Changes') {
            steps {
                script {

                    sh "hello world"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
